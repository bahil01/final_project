<div class="page-header">
  <h1>
    Symptoms
    <a href="/symptoms/new" class="btn btn-lg btn-success">New Symptom</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Symptom name</th>
        <th>Actions</th>
      </tr>

      <% @symptoms.each do |symptom| %>
      <tr>
        <td><%= symptom.symptom_name %></td>
        <td>
          <a href="/symptoms/<%= symptom.id %>" class="btn btn-primary">Show</a>
          <a href="/symptoms/<%= symptom.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_symptom/<%= symptom.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
