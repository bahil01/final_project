<!-- Validation failure messages -->
<% if @symptom.errors.any? %>
  <% @symptom.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Symptom</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_symptom" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for symptom_name -->
      <div class="form-group">
        <label for="symptom_name" class="control-label">
          Symptom name
        </label>

        <input type="text" id="symptom_name" name="symptom_name" placeholder="Symptom name" class="form-control" value="<%= @symptom.symptom_name %>">
      </div>

      <button class="btn btn-success">
        Create Symptom
      </button>
      or
      <a href="/symptoms">Cancel</a>
    </form>
  </div>
</div>
