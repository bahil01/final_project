<div class="page-header">
  <h1>
    Logs
    <a href="/logs/new" class="btn btn-lg btn-success">New Log</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Symptom</th>
        <th>Actions</th>
      </tr>

      <% @logs.each do |log| %>
      <tr>
        <td>
          <% if log.user.present? %>
            <a href="/users/<%= log.user.id %>">
              <%= log.user.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if log.symptom.present? %>
            <a href="/symptoms/<%= log.symptom.id %>">
              <%= log.symptom.symptom_name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/logs/<%= log.id %>" class="btn btn-primary">Show</a>
          <a href="/logs/<%= log.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_log/<%= log.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @logs, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
