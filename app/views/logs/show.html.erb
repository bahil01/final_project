<div class="page-header">
  <h3>Log #<%= @log.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @log.user.present? %>
          <a href="/users/<%= @log.user_id %>">
            <%= @log.user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Symptom</dt>
      <dd>
        <% if @log.symptom.present? %>
          <a href="/symptoms/<%= @log.symptom_id %>">
            <%= @log.symptom.symptom_name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/logs" class="btn btn-primary">
        Back
      </a>
      <a href="/logs/<%= @log.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_log/<%= @log.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
