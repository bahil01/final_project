<div class="page-header">
  <h1>
    Cancers
    <a href="/cancers/new" class="btn btn-lg btn-success">New Cancer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Cancer name</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @cancers.each do |cancer| %>
      <tr>
        <td><%= cancer.cancer_name %></td>
        <td><%= cancer.user.created_at %></td>
        <td>
          <a href="/cancers/<%= cancer.id %>" class="btn btn-primary">Show</a>
          <a href="/cancers/<%= cancer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_cancer/<%= cancer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @cancers, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
